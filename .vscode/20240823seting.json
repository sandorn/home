{
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2255",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "underline": false,
            "bold": false,
            "italic": false,
        },
        {
            "tag": "@",
            "color": "#eb7208", //"#FF6622",
        },
        {
            "tag": "#",
            "color": "#b4e782", //"#77BB33",
        },
        {
            "tag": "$",
            "color": "#9999CC",
        },
        {
            "tag": "%",
            "color": "#3399CC",
        },
        {
            "tag": "^",
            "color": "#66CCCC",
        },
        {
            "tag": "&",
            "color": "#888888",
        },
        {
            "tag": "*",
            "color": "#333333",
        }
    ],
    "code-runner.executorMap": {
        "python": "set PYTHONIOENCODING=utf8 && python -u ",
        "aardio": "D:/program/aardio/aardio.exe -R $fullFileName ",
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.saveFileBeforeRun": true,
    "emmet.triggerExpansionOnTab": true,
    //https://github.com/OBKoro1/koro1FileHeader
    //文件头部注释  快捷键：window：ctrl+alt+i,mac：ctrl+cmd+i
    //函数注释 快捷键：window：ctrl+alt+t,mac：ctrl+cmd+t
    "fileheader.customMade": {
        "Description": "头部注释",
        "Develop": "VSCode",
        "Author": "git config user.name && git config user.email",
        "Date": "Do not edit",
        "LastEditTime": "Do not edit",
        "FilePath": "Do not edit",
        "Github": "https://github.com/sandorn/home"
    },
    "fileheader.configObj": {
        "createFileTime": true,
        "autoAdd": true, // 自动添加头部注释开启才能自动添加
        "autoAlready": true, // 只添加插件支持的语言以及用户通过`language`选项自定义的注释
        "createHeader": true, // 默认打开,新建文件自动添加头部注释
        "throttleTime": 60000, // 同一个文件 过一段时间再次修改并保存才更新注释
        "language": {
            "python": {
                "head": "'''\n==============================================================",
                "middle": "",
                "end": "==============================================================\n'''",
                "functionSymbol": {
                    "head": "'''",
                    "middle": "",
                    "end": "'''"
                }
            },
            // 一次匹配多种文件后缀文件 不用重复设置
            "h/hpp/cpp/rs/vba/aardio": {
                "head": "/*** ", // 统一增加几个*号
                "middle": " * @",
                "end": " ***/"
            },
        },
        "filePathColon": "/", // 路径要转义
        "wideSame": true, // 设置为true开启,字段名列对齐,默认宽度13
        "beforeAnnotation": {
            "py": "# !/usr/bin/env python" //\n# -*- coding: utf-8 -*-
        },
    },
    // [[Python]]
    "python.autoComplete.extraPaths": [
        "D:/CODE/xjLib",
        // "D:/Python3/Lib/site-packages",
    ],
    // "python.defaultInterpreterPath": "D:/Python3/python.exe",
    "python.analysis.extraPaths": [
        "D:/CODE/xjLib",
        "D:/Python3/Lib/site-packages"
    ],
    // "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    // "python.analysis.autoSearchPaths": false,
    // "python.analysis.enablePytestSupport": false,
    // "python.analysis.enableSyncServer": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    // 在编辑器中显示类型提示  "offUnlessPressed"  "onUnlessPressed"  "on"  "off"
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.callArgumentNames": "all", // "off", "partial", "all"
    "python.analysis.typeCheckingMode": "standard", //"standard"  "strict" "basic"  //决定错误提示多少
    "python.analysis.diagnosticSeverityOverrides": {
        "reportCallIssue": "none", //调用表达式和参数问题的提示
        "reportAttributeAccessIssue": "none", //属性访问问题的提示
    },
    // "python.venvPath": "~/Code/python/pyvenvs", // Python 虚拟环境所在路径
    "pyqt-integration.qtdesigner.path": "d:\\Python3\\Scripts\\Qt Designer\\designer.exe",
    "pyqt-integration.pyuic.cmd": "pyuic6",
    "pyqt-integration.pyrcc.cmd": "pyrcc6",
    "pyqt-integration.pylupdate.cmd": "pylupdate6",
    "python.terminal.activateEnvironment": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        // 默认使用 Ruff 格式化"charliermarsh.ruff" //"eeyore.yapf",
        "editor.formatOnSave": true, // 保存时自动格式化
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit", // 保存时自动修复可修复的 lint 错误
            "source.organizeImports.ruff": "explicit", // 保存时自动排序 import 语句
            "source.inlineVariable": "explicit", // 保存时不自动内联变量
            "source.fixAll": "explicit", // 保存时自动修复所有问题
        },
        "editor.formatOnType": true,
    },
    // [[Terminal]]
    "terminal.integrated.fontSize": 14, // 集成终端字号
    "terminal.integrated.fontFamily": "Fira Code,Consolas,等距更纱黑体 SC",
    "terminal.integrated.tabs.showActions": "always", // 始终显示“新建终端”按钮旁的“终端拆分”和“终止”按钮
    "terminal.integrated.tabs.showActiveTerminal": "always", // 集成终端启用视觉化铃声
    "terminal.integrated.gpuAcceleration": "on", // 集成终端使用GPU加速
    "terminal.integrated.rightClickBehavior": "selectWord", // 集成终端右击时选择光标下方的字词，并打开上下文菜单
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.windows": {
        "LC_ALL": "zh_CN.UTF-8" // 集成终端编码: zh_CN.UTF-8
    },
    "terminal.integrated.enableVisualBell": true,
    // [[Git]]
    "git.allowForcePush": true,
    "git.allowNoVerifyCommit": true,
    "git.autofetch": "all", // 自动从当前 Git 存储库的默认远程库提取提交
    "git.confirmForcePush": false,
    "git.confirmSync": false, // 同步 Git 存储库前确认
    "git.defaultCloneDirectory": "D:/CODE",
    "git.enabled": true,
    "git.enableSmartCommit": true, // 没有暂存的更改时，直接提交全部
    "git.path": "D:/program/Git/bin/git.exe",
    "git.postCommitCommand": "sync",
    "git.mergeEditor": true, // 启用三向合并编辑器
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false,
        "scminput": false,
        "go": true,
        "python": true,
        "code-runner-output": true
    },
    // [[window]]
    "window.commandCenter": true,
    "window.restoreWindows": "all",
    "window.titleBarStyle": "native",
    // "window.menuBarVisibility": "hidden",
    // [[workbench]]
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.view.alwaysShowHeaderActions": true, // 显示视图头部的操作项
    "workbench.settings.editor": "json", // 默认打开 settings.json 进行设置
    "workbench.editor.historyBasedLanguageDetection": true, // 允许语言检测使用编辑器历史记录
    // [[debug]]
    "debug.console.acceptSuggestionOnEnter": "on", // 调试控制台中可以用 enter 接受建议
    "debug.internalConsoleOptions": "neverOpen", // 从不自动打开内部调试控制台
    // [[editor]]
    "editor.renderFinalNewline": "on",
    "editor.fontSize": 15,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 480,
    "editor.fontFamily": "Fira Code,Consolas,等距更纱黑体 SC",
    //"'Fira Code','Inconsolata',"Consolas,'Courier New','Source Code Pro','Droid Sans Mono','YaHei Consolas Hybrid','等距更纱黑体 SC','YaCons'",
    "editor.tabCompletion": "on",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.suggest.showConstants": true,
    "editor.minimap.renderCharacters": false,
    "editor.fontLigatures": true, // 启用连字体
    "editor.lineHeight": 0, // 行高：使用 0 根据字号自动计算行高
    // "editor.bracketPairColorization.enabled": true, // 控制是否对括号着色
    // "editor.bracketPairColorization.independentColorPoolPerBracketType": true, //各类括号独立着色
    "editor.guides.bracketPairs": true, // 启用括号指导线
    "editor.guides.bracketPairsHorizontal": "active", // 启用水平括号指导线
    "editor.guides.highlightActiveIndentation": false, // 禁用高亮选中的缩进指导线
    "editor.guides.indentation": false, // 禁用缩进指导线
    "editor.semanticHighlighting.enabled": true, // 颜色主题
    "editor.acceptSuggestionOnEnter": "smart", // 编辑器中可以用 enter 接受建议
    "editor.stickyScroll.enabled": true, // 启用粘滞滚动，即显示上一级对应的代码
    "editor.unicodeHighlight.ambiguousCharacters": false, // 不突出显示可能与基本 ASCII 字符混淆的字符
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.unicodeHighlight.includeComments": false,
    "editor.minimap.enabled": true, // 控制是否显示缩略图cod
    "editor.formatOnType": true, // 自动格式化
    "editor.renderWhitespace": "all", // 控制编辑器在空白字符上显示符号的方式
    "editor.snippetSuggestions": "top", // 代码片段建议置于其他建议之上
    "editor.stickyTabStops": true, // 使用空格缩进时模拟制表符的行为，可以方便对齐
    "editor.tabSize": 4, // 一个制表符 = 4个空格
    "editor.suggest.insertMode": "replace", // 建议的接受方式
    "editor.suggest.localityBonus": true, // 控制排序时是否提高靠近光标的词语的优先级
    "editor.suggest.matchOnWordStartOnly": false, // 禁用建议必须匹配开头
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showStatusBar": true, // 控制建议小部件底部的状态栏可见
    "editor.suggestOnTriggerCharacters": true, // 控制在键入触发字符后是否自动显示建议
    "editor.suggestSelection": "first", // 始终预先选择第一个建议
    "editor.wordBasedSuggestions": "matchingDocuments", // 控制是否根据文档中的文字提供建议列表
    "editor.autoClosingOvertype": "always", // 控制编辑器应当自动改写左引号或右引号
    "editor.detectIndentation": false, // 禁用自动检测文件缩进模式和缩进大小，自动更改
    "editor.formatOnSave": true, // 保存自动格式化代码
    "editor.formatOnPaste": true, // 粘贴自动格式化
    "editor.quickSuggestionsDelay": 0, // 控制显示快速建议前的等待时间（毫秒）
    "editor.inlineSuggest.enabled": true, // 在编辑器中自动显示内联建议
    "editor.parameterHints.enabled": true, // 是否在输入时显示含有参数文档和类型信息的小面板
    // 控制是否在键入代码时自动显示建议
    "editor.quickSuggestions": {
        "comments": false, // 键入注释时不允许
        "other": true, // 键入其他时允许
        "strings": false // 键入字符串时不允许
    },
    // [[explorer]]
    "explorer.confirmDragAndDrop": false, // 移动文件时无需确认
    "explorer.confirmDelete": false, // 删除文件确认
    "explorer.incrementalNaming": "smart", // 粘贴同名文件时的重命名方式;smart: 在重复名称末尾智能地添加/递增数字
    "explorer.compactFolders": false, // 资源管理器不采用紧凑模式
    // [[files]]
    "files.associations": {
        "*.qss": "css",
        "*.aardio": "aardio",
        "*.toml": "ini"
    },
    "files.encoding": "utf8",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.autoGuessEncoding": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/__pycache__": true
    },
    "files.autoSave": "onFocusChange", // 自动保存 afterDelay
    "files.hotExit": "onExitAndWindowClose", // 记住未保存的文件,在退出编辑器时跳过保存提示
    // [[notebook]]
    "notebook.lineNumbers": "on", // 控制单元格编辑器中行号的显示
    // 应该在何处显示单元格工具栏，或是否隐藏它
    "notebook.cellToolbarLocation": {
        "default": "right", // 默认: 右边
        "jupyter-notebook": "left" // jupyter-notebook: 左边
    },
    // [[search]]
    "search.showLineNumbers": true, // 显示搜索结果所在行号
    "search.smartCase": true, // 当搜索词为小写时，则不区分大小写进行搜索，否则区分大小写
    // 配置在搜索中排除的文件和文件夹的glob模式
    "search.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/__pycache__": true
    },
    "output.smartScroll.enabled": true, // 输出窗口智能滚动：点击时锁定，点击最后一行时解锁
    "problems.showCurrentInStatus": true, // 在状态栏显示当前问题
    "problems.sortOrder": "position", // 控制问题导航的显示顺序
    "json.schemaDownload.enable": true,
    "security.workspace.trust.untrustedFiles": "open",
    // "extensions.ignoreRecommendations": true,
    "breadcrumbs.filePath": "on",
    // "workbench.layoutControl.enabled": false,
    "workbench.colorTheme": "Atom One Dark",
    "workbench.colorCustomizations": {
        // "editorCursor.foreground": "#FF0000",
        // "terminalCursor.foreground": "#FF0000"
    },
    "workbench.layoutControl.enabled": false,
    "window.customTitleBarVisibility": "never",
}
