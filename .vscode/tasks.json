{
    "version": "2.0.0",
    "command": "cmd",
    "args": [
        "/C"
    ],
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "python",
            "type": "shell",
            "args": [
                "${file}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ]
        }
    ]
}
